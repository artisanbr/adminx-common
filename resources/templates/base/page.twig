<html lang="pt-BR">
<head>
    {{ include(getTemplate('head')) }}
</head>
<body id="{{ frontendBuild.body.id }}" class="{{ frontendBuild.body.class }}">
{{ include(getTemplate('header')) }}
<main class="main-content">
    {% if breadcrumb and breadcrumb.enabled %}
        {{ include('@base/components/breadcrumb.twig') }}
    {% endif %}

    {% if customPageTemplate %}
        {{ include(customPageTemplate) }}
    {% else %}
        {{ include(getTemplate('content')) }}
    {% endif %}

</main>
{{ include(getTemplate('footer')) }}
</body>
</html>
