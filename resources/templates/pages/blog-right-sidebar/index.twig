<div class="blog-area py-10">
    <div class="container">
        <div class="row g-8">
            <div class="col-lg-8 order-lg-1 order-1">
                <div class="blog-item-wrap row">
                    {% if articles.count() %}
                        <div class="col-12 first-article">
                            {{ include('@template/components/articles/article-miniature-1.twig', {article: articles.first(), big: true, showReadMore: true, coverMeta: true}) }}
                            {# <x-frontend::pages.Articles.article-miniature-1 :article="articles.first()" big/> #}
                            <hr class="mb-5"/>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    {% for article in articles.getCollection().forget(0).odd().values() %}
                                        <div class="row">
                                            <div class="col-12">
                                                {{ include('@template/components/articles/article-miniature-1.twig', {article: article, class: 'article-left-side', showDescription: false, showReadMore: true, coverMeta: true}) }}

                                                {% if not loop.last %}
                                                    <hr class="mb-4"/>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-12 col-md-6">
                                    {% for article in articles.getCollection().forget(0).even().values() %}
                                        <div class="row">
                                            <div class="col-12">
                                                {{ include('@template/components/articles/article-miniature-1.twig', {article: article, class: 'article-right-side', showDescription: false, showReadMore: true, coverMeta: true}) }}

                                                {% if not loop.last %}
                                                    <hr class="mb-4"/>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="pagination-area pt-10">
                                <nav aria-label="Paginação">
                                    {{ articles.links('common-frontend::layout.inc.pagination') }}
                                </nav>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <h1>Nenhuma Postagem Encontrada</h1>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-4 order-lg-2 order-2 pt-10 pt-lg-0">
                {{ include('@template/shared/sidebar.twig') }}
            </div>
        </div>
    </div>
</div>
